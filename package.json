{
  "name": "eds-self-service-website",
  "private": true,
  "version": "1.0.0",
  "description": "Fast Sites",
  "scripts": {
    "dev": "aem up --no-open --url https://main--eds-self-service-website--headwire-edge-delivery.aem.live",
    "lint:js": "eslint .",
    "lint:js-fix": "eslint . --fix",
    "lint:css": "stylelint blocks/**/*.css styles/*.css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js-fix && npm run lint:css",
    "prettier": "npx prettier --write '**/*.{html,json,js,mjs,cjs,css}",
    "prepare": "husky",
    "knip": "knip"
  },
  "devDependencies": {
    "@adobe/aem-cli": "^16.10.15",
    "@driftingsands/self-service-lint": "^1.0.0",
    "@types/node": "^22.14.0",
    "eslint": "^9.24.0",
    "husky": "^9.1.7",
    "knip": "^5.47.0",
    "lint-staged": "^15.5.0",
    "stylelint": "16.18.0",
    "stylelint-config-standard": "38.0.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "**/*.{html,json}": [
      "npx prettier --write"
    ],
    "**/*.{js,mjs,cjs}": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "*.css": [
      "npx prettier --write",
      "npx stylelint --fix"
    ]
  }
}
